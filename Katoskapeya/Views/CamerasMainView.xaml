<Window x:Class="Kataskopeya.Views.CamerasMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kataskopeya.ViewModels"
        mc:Ignorable="d"
        Title="CamerasMainView" Height="350" Width="600"
        Background="Transparent">
    <Window.DataContext>
        <local:CamerasMainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="400"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"/>
                        <GradientStop Color="#f083da" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel>
                <Image Source="{Binding Image}"
                       Width="350"
                       Height="230"
                       Margin="0,20,0,0"
                       VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Username}"
                           FontFamily="Helvetica"
                           FontSize="20"
                           Background="Transparent"
                           Foreground="Black"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Button Width="140"
                        Height="40"
                        Content="Start stream"
                        Command="{Binding StartSourceCommand}"
                        Margin="0,20,0,0"/>
                <Button Width="140"
                        Height="40"
                        Content="Stop stream"
                        Command="{Binding StopSourceCommand}"
                        Margin="0,20,0,0"/>
                <Button Width="140"
                        Height="40"
                        Content="Grayscale"
                        Command="{Binding MakeGrayscale}"
                        Margin="0,20,0,0"/>
                <Button Width="140"
                        Height="40"
                        Content="Original"
                        Command="{Binding MakeOriginal}"
                        Margin="0,20,0,0"/>
                <Button Width="140"
                        Height="40"
                        Content="Start recording"
                        Command="{Binding RecordVideoSource}"
                        Margin="0,20,0,0"/>
            </StackPanel>

        </Grid>
        <!--<Image Source="{Binding Image}" Margin="10,0,10,70" />-->
        <!--<Button Width="67"
                Height="21"
                Margin="296,0,0,25"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Command="{Binding StopSourceCommand}"
                Content="Stop" />-->
    </Grid>
</Window>
